@{
    ViewData["Title"] = "Secret";
}
<h1>@ViewData["Title"]</h1>

<p>Secret!</p>

@{
    if (this.IfClaim("Products", "Create"))
    {
        <p>You will be able to see this text if you have create permission!</p>
