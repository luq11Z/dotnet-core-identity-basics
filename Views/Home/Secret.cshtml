}

<div>
    @Html.ActionLink("Secret", "Secret").IfClaimShow(Context ,"Products", "Create")
</div>

<div>
    <br/>
    <a href="#" class="btn btn-danger @Html.Raw(this.IfClaimShow("Products", "Createa"))">Delete</a>
</div>